<%- include("template/cabecera",{titulo:"Acceder"}) %> <%-
include("template/navbar") %>
<div class="login-container">
  <form action="/verifyLogin" method="post" class="form-container">
    <div class="input-container">
      <input
        type="text"
        class="input"
        name="user"
        id="user"
        placeholder="Usuario"
        autocomplete="off"
      />
      <% if (messageError.messageUserError) { %>
      <p class="message-error"><%= messageError.messageUserError %></p>
      <% } %>
    </div>
    <div class="input-container">
      <input
        type="password"
        name="password"
        id="password"
        placeholder="Password"
      />
      <% if (messageError.messagePasswordError) { %>
      <p class="message-error"><%= messageError.messagePasswordError %></p>
      <% } %>
    </div>
    <input type="submit" value="Ingresar" />
  </form>
</div>

<%- include("template/footer") %>
